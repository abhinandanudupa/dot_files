{
    "layer": "bottom",
    "position": "bottom",
    "mod": "dock",
    "height": 0,
    "modules-left": [
        "sway/mode",
        "sway/workspaces",
        "sway/window"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
//        "clock",
        "backlight",
        "pulseaudio",
        "cpu",
        "memory",
        "battery",
        "tray"
    ],
    "sway/window": {
        "max-length": 200,
        "separate-outputs": true
    },
    "sway/mode": {
        "format": "{}",
        "max-length": 50
    },
    "tray": {
        "icon-size": 18,
        "spacing": 10
    },
    "clock": {
        "interval": 1,
        "format": "{:%H:%M:%S %p on %A, %d %B %Y}"
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "{icon} {percent}%",
        "format-icons": [
            "â˜€"
        ],
        "on-scroll-up": "brightnessctl set 5%+",
        "on-scroll-down": "if [[ $(brightnessctl g) -gt 2000 ]]; then brightnessctl set 5%-; fi"
    },
    "bluetooth": {
        "format": "ïŠ” {status}",
        "format-connected": "ïŠ” {device_alias}",
        "format-connected-battery": "ïŠ” {device_alias} {device_battery_percentage}%",
        "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
        "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
        "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%"
    },
    "cpu": {
        "interval": 1,
        "format": "ğŸ”¥ {usage}%",
        "tooltip": true
    },
    "memory": {
        "interval": 1,
        "format": "ğŸ«™ {percentage}%",
        "tooltip": true
    },
    "battery": {
        "interval": 1,
        "design-capacity": false,
        "format": "{icon} {capacity}%",
        "states": {
            "warning": 25,
            "critical": 15
        },
        "format-charging": "ï‡¦ {capacity}%",
        "format-icons": [
            "ï‰„",
            "ï‰ƒ",
            "ï‰‚",
            "ï‰",
            "ï‰€"
        ],
        "tooltip": true
    },
    "network": {
        "format-wifi": "ï‡«",
        "format-ethernet": "",
        "format-linked": "ï– (No IP)",
        "format-disconnected": "âš  Disconnected",
        "format-alt": "{ifname}: {ipaddr}"
    },
    "pulseaudio": {
        "format": "{icon} {volume:3}% {format_source}",
        "format-muted": "ğŸ”‡ {format_source}",
        "format-bluetooth": "ïŠ” {volume}% {format_source}",
        "format-bluetooth-muted": "{icon} {format_source}",
        "format-source": "ï„° {volume}%",
        "format-source-muted": "ï„± ",
        "format-icons": {
            "default": [
                "ï€¦ ",
                "ï€§ ",
                "ï€¨ ",
                "ï€¨ "
            ]
        },
        "on-click": "pavucontrol"
    }
}
